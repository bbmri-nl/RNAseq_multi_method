{
  "workdir": {
    "type": "string",
    "required": true
  },
  "sampleSheet": {
    "type": "string",
    "required": true
  },
  "stranded": {
    "type": "string",
    "default": "no",
    "regex": "(no|yes|reverse)"
  },
  "reference":{
    "type": "dict",
    "required": true,
    "schema": {
      "fasta": {
        "type": "string",
        "required": true
      },
      "gff": {
        "type": "string",
        "required": true
      },
      "refflat": {
        "type": "string",
        "required": true
      }
    }
  },
  "cutadapt": {
    "type": "dict",
    "default": {},
    "schema": {
      "threads": {
        "type": "integer",
        "default": 4
      },
      "minimum_readlength": {
        "type": "integer",
        "default": 40
      },
      "quality_threshold": {
        "type": "integer",
        "default": 20
      },
      "adapterFile": {
        "type": ["list", "string"],
        "default": "/usr/local/FastQC/FastQC-0.11.2/Configuration/adapter_list.txt",
        "schema": {
          "type": "list",
          "minlength": 1
        }
      },
      "params": {
        "type": "string",
        "default": ""
      }
    }
  },
  "bamstats":{
    "type": "dict",
    "default": {},
    "schema": {
      "params":{
        "type": "string",
        "default": ""
      }
    }
  },
  "mappers": {
    "type": "dict",
    "required": true,
    "minlength": 1,
    "schema": {
      "star": {
        "type": "dict",
        "default": {
          "include": false,
          "index": ""
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          },
          "index": {
            "type": "string",
            "required": true
          },
          "params": {
            "type": "string",
            "default": ""
          },
          "threads": {
            "type": "integer",
            "default": 8
          }
        }
      },
      "star2pass": {
        "type": "dict",
        "default": {
          "include": false,
          "index": ""
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          },
          "index": {
            "type": "string",
            "required": true
          },
          "params": {
            "type": "string",
            "default": ""
          },
          "threads": {
            "type": "integer",
            "default": 8
          }
        }
      },
      "hisat2": {
        "type": "dict",
        "default": {
          "include": false,
          "index": ""
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          },
          "index": {
            "type": "string",
            "required": true
          },
          "params": {
            "type": "string",
            "default": ""
          },
          "threads": {
            "type": "integer",
            "default": 8
          }
        }
      }
    }
  },
  "counting": {
    "type": "dict",
    "required": true,
    "minlength": 1,
    "schema": {
      "htseq-count": {
        "type": "dict",
        "default": {
          "include": false
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          },
          "params": {
            "type": "string",
            "default": ""
          },
          "id_field": {
            "type": "string",
            "default": "gene_id"
          }
        }
      },
      "featurecounts": {
        "type": "dict",
        "default": {
          "include": false
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          },
          "params": {
            "type": "string",
            "default": ""
          },
          "feature_type": {
            "type": "string",
            "default": "exon"
          },
          "feature_group": {
            "type": "string",
            "default": "gene_id"
          }
        }
      },
      "star_quantmode": {
        "type": "dict",
        "default": {
          "include": false
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          },
          "params": {
            "type": "string",
            "default": ""
          }
        }
      },
      "basecounter_exon": {
        "type": "dict",
        "default": {
          "include": false
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          }
        }
      },
      "basecounter_intron": {
        "type": "dict",
        "default": {
          "include": false
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          }
        }
      },
      "basecounter_gene": {
        "type": "dict",
        "default": {
          "include": false
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          }
        }
      },
      "basecounter_transcript": {
        "type": "dict",
        "default": {
          "include": false
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          }
        }
      }
    }
  },
  "variantcalling": {
    "type": "dict",
    "default": {},
    "minlength": 1,
    "schema": {
      "varscan": {
        "type": "dict",
        "default": {
          "include": false
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          },
          "params": {
            "type": "string",
            "default": ""
          }
        }
      }
    }
  }
}
