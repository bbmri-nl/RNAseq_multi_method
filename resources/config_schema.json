{
  "workdir": {
    "type": "string",
    "required": true
  },
  "sampleSheet": {
    "type": "string",
    "required": true
  },
  "stranded": {
    "type": "string",
    "default": "no",
    "regex": "(no|yes|reverse)"
  },
  "reference":{
    "type": "dict",
    "required": true,
    "schema": {
      "fasta": {
        "type": "string",
        "required": true
      },
      "gff": {
        "type": "string",
        "required": true
      },
      "refflat": {
        "type": "string",
        "required": true
      },
      "dbsnp": {
        "type": "string",
        "required": true
      }
    }
  },
  "QC": {
    "type": "dict",
    "default": {},
    "schema": {
      "threads": {
        "type": "integer",
        "default": 4
      },
      "minimum_readlength": {
        "type": "integer",
        "default": 40
      },
      "quality_threshold": {
        "type": "integer",
        "default": 20
      },
      "extractadaptersfastqc_jar": {
        "type": "string",
        "default": "/exports/sasc/dcats/ExtractAdaptersFastqc-assembly-0.1.jar"
      },
      "cutadapt_params": {
        "type": "string",
        "default": ""
      },
      "contaminants": {
        "type": "string",
        "default": "/usr/local/FastQC/current/Configuration/contaminant_list.txt"
      },
      "adapters": {
        "type": "string",
        "default": "/usr/local/FastQC/current/Configuration/adapter_list.txt"
      }
    }
  },
  "bamstats":{
    "type": "dict",
    "default": {},
    "schema": {
      "params":{
        "type": "string",
        "default": ""
      }
    }
  },
  "validatefastq_jar":{
    "type": "string",
    "default": "/exports/sasc/dcats/validatefastq-assembly-0.1.1.jar"
  },
  "gatk": {
    "type": "dict",
    "default": {},
    "schema": {
      "jar_path": {
        "type": "string",
        "default": "/usr/local/sasc/programs/gatk/GenomeAnalysisTK-3.8-0-ge9d806836/GenomeAnalysisTK.jar"
      }
    }
  },
  "picard_path": {
      "type": "string",
      "default": "/usr/local/sasc/programs/picard-tools/picard-tools-2.9.0/picard.jar"
  },
  "mappers": {
    "type": "dict",
    "required": true,
    "minlength": 1,
    "schema": {
      "star": {
        "type": "dict",
        "default": {
          "include": false,
          "index": ""
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          },
          "index": {
            "type": "string",
            "required": true
          },
          "params": {
            "type": "string",
            "default": ""
          },
          "threads": {
            "type": "integer",
            "default": 8
          }
        }
      },
      "star2pass": {
        "type": "dict",
        "default": {
          "include": false,
          "index": ""
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          },
          "index": {
            "type": "string",
            "required": true
          },
          "params": {
            "type": "string",
            "default": ""
          },
          "threads": {
            "type": "integer",
            "default": 8
          }
        }
      },
      "hisat2": {
        "type": "dict",
        "default": {
          "include": false,
          "index": ""
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          },
          "index": {
            "type": "string",
            "required": true
          },
          "params": {
            "type": "string",
            "default": ""
          },
          "threads": {
            "type": "integer",
            "default": 4
          }
        }
      }
    }
  },
  "counting": {
    "type": "dict",
    "required": true,
    "minlength": 1,
    "schema": {
      "htseq-count": {
        "type": "dict",
        "default": {
          "include": false
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          },
          "params": {
            "type": "string",
            "default": ""
          },
          "id_field": {
            "type": "string",
            "default": "gene_id"
          }
        }
      },
      "featurecounts": {
        "type": "dict",
        "default": {
          "include": false
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          },
          "params": {
            "type": "string",
            "default": ""
          },
          "feature_type": {
            "type": "string",
            "default": "exon"
          },
          "feature_group": {
            "type": "string",
            "default": "gene_id"
          }
        }
      },
      "star_quantmode": {
        "type": "dict",
        "default": {
          "include": false
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          },
          "params": {
            "type": "string",
            "default": ""
          }
        }
      },
      "basecounter_exon": {
        "type": "dict",
        "default": {
          "include": false
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          }
        }
      },
      "basecounter_intron": {
        "type": "dict",
        "default": {
          "include": false
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          }
        }
      },
      "basecounter_gene": {
        "type": "dict",
        "default": {
          "include": false
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          }
        }
      },
      "basecounter_transcript": {
        "type": "dict",
        "default": {
          "include": false
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          }
        }
      },
      "salmon": {
        "type": "dict",
        "default": {
          "include": false,
          "index": ""
        },
        "schema": {
          "include":{
            "type": "boolean",
            "default": true
          },
          "params": {
            "type": "string",
            "default": ""
          },
          "index": {
            "type": "string",
            "required": true
          },
          "threads": {
            "type": "integer",
            "default": 8
          }
        }
      }
    }
  },
  "variantcalling": {
    "type": "dict",
    "default": {},
    "minlength": 1,
    "schema": {
      "varscan": {
        "type": "dict",
        "default": {
          "include": false
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          },
          "params": {
            "type": "string",
            "default": ""
          }
        }
      },
      "haplotypecaller": {
        "type": "dict",
        "default": {
          "include": false
        },
        "schema": {
          "include": {
            "type": "boolean",
            "default": true
          },
          "params": {
            "type": "string",
            "default": "--dontUseSoftClippedBases -stand_call_conf 20"
          },
          "filter_params": {
            "type": "string",
            "default": "-window 35 -cluster 3 -filterName \"FS\" -filter \"FS > 30.0\" -filterName \"QD\" -filter \"QD < 2.0\""
          }
        }
      }
    }
  },
  "centrifuge": {
    "type": "dict",
    "default": {
      "include": false,
      "index": ""
    },
    "schema": {
      "include": {
        "type": "boolean",
        "default": true
      },
      "params": {
        "type": "string",
        "default": ""
      },
      "index": {
        "type": "string",
        "required": true
      },
      "threads": {
        "type": "integer",
        "default": 8
      }
    }
  }
}
